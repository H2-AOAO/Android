<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="5dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/dino_item_btn_wrapper"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp"
        android:clickable="false"
        >
        <Button
            android:id="@+id/btn_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="@color/raise_dino_green"
            android:contentDescription="@string/raise_dino_description_warning"/>
        <ImageView
            android:id="@+id/img_item"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/item_love"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/num_item"
            android:background="@drawable/design_round_shape"
            android:layout_width="wrap_content"
            android:width="23dp"
            android:height="23dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginStart="53dp"
            android:layout_marginTop="50dp"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>