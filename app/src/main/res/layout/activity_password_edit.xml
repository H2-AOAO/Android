<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".user.ui.PasswordEditActivity">

    <!--    비밀번호 편집 구현-->
    <!--    @since 2024.01.28 ~-->
    <!--    @author 이상민-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="115dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/passwordEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="비밀번호 수정"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- 현재 비밀번호 -->
            <TextView
                android:id="@+id/currentPwText"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="현재 비밀번호"
                android:textColor="@color/black"
                android:textSize="@dimen/user_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/currentPw"
                    android:layout_width="234dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="*********"
                    android:textSize="@dimen/user_edit_text_size" />

                <Button
                    android:id="@+id/currentPwCheckButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/user_button"
                    android:text="확인"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"

                    tools:ignore="SmallSp" />
            </LinearLayout>

            <TextView
                android:id="@+id/currentPwErrorMessageTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/hint"
                android:textSize="@dimen/user_text_hint_size" />

            <!-- 비밀번호 -->
            <TextView
                android:id="@+id/pwText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="\n새 비밀번호"
                android:textColor="@color/black"
                android:textSize="@dimen/user_text_size"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newPw"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="@dimen/user_edit_text_size"
                    android:text="" />
            </LinearLayout>
            <TextView
                android:id="@+id/pwErrorMessageTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="영문, 숫자, 특수문자를 포함한 8~20자로 입력해 주세요.\n"
                android:textColor="@color/hint"
                android:textSize="@dimen/user_text_hint_size" />

            <!-- 비밀번호 확인 -->
            <TextView
                android:id="@+id/pw2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="@dimen/user_text_size"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/newPw2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="@dimen/user_edit_text_size"
                    android:text="" />
            </LinearLayout>
            <TextView
                android:id="@+id/pw2ErrorMessageTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/hint"
                android:textSize="@dimen/user_text_hint_size" />

            <!-- 변경 완료 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/change_finish_cardview"
                android:layout_width="342dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/user_button"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/changeButton"
                    android:layout_width="400dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="-100dp"
                    android:backgroundTint="@color/user_button" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="변경 완료"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>