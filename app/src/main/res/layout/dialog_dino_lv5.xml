<?xml version="1.0" encoding="utf-8"?>

<!-- 축하요 다이얼로그 -->
<!-- @author 김은서-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="340dp"
    android:layout_height="500dp"
    android:paddingBottom="40dp"
    android:paddingTop="40dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:backgroundTint="@color/white">
    <TextView
        android:layout_width="250dp"
        android:fontFamily="@font/soyomaplebold"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/final_dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="고맙다이노!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        />
    <TextView
        android:layout_width="250dp"
        android:fontFamily="@font/soyomaple"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/final_dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="여태까지 함께해준 덕분이야"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/final_dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/button"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:fontFamily="@font/soyomaple"
            android:layout_marginTop="-10dp"
            android:text="새로운 다이노 입양하기"
            android:textStyle="bold"
            android:backgroundTint="@color/todo_folder_update_button"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/final_dragon"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:src="@drawable/dino_blue_lv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firework_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firework_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="208dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firework_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="260dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firework_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="4dp"
        android:rotationY="-180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>