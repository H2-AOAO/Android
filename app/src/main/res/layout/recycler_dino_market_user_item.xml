<?xml version="1.0" encoding="utf-8"?>
<!-- 상점 유저가 소유한 아이템 리사이클러뷰-->
<!-- @since 2024.01.20-->
<!-- @author 김은서-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/user_item_market"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/item_love"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_item_market"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/market_item_green"
        app:cardCornerRadius="5dp">
        <TextView
            android:id="@+id/user_item_market_text"
            android:text="10"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>