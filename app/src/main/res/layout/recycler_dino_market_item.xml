<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginTop="15dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="1dp"
        android:clickable="false"
        >
        <ImageView
            android:id="@+id/market_item_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/design_round_shape"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/item_love"
            android:padding="15dp"
            />
        <TextView
            android:id="@+id/market_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="애정"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="95dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_dollar_yellow"
            android:layout_marginStart="200dp"
            />
        <TextView
            android:id="@+id/market_item_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="30"
            android:textColor="@color/market_money_grey"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="235dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/raise_dino_green"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="-4.5dp"
                android:backgroundTint="@color/raise_dino_green"
                android:text="구매"
                android:textStyle="bold"
                android:gravity="top"
                />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</LinearLayout>