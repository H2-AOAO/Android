<?xml version="1.0" encoding="utf-8"?>

<!-- 상점 구매용 리사이클러뷰-->
<!-- @since 2024.01.19-->
<!-- @author 김은서-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginTop="15dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="1dp"
        android:clickable="false"
        >
        <ImageView
            android:id="@+id/market_item_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/design_round_shape"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/item_love"
            android:padding="15dp"
            />
        <TextView
            android:id="@+id/market_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/soyomaple"
            android:text="애정"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="95dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_dollar_yellow"
            android:layout_marginStart="200dp"
            />
        <TextView
            android:id="@+id/market_item_money"
            android:layout_width="wrap_content"
            android:fontFamily="@font/soyomaple"
            android:layout_height="match_parent"
            android:text="30"
            android:textColor="@color/market_money_grey"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="235dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:clickable="false"
            app:cardBackgroundColor="@color/raise_dino_green"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/market_button_buy"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="-10dp"
                android:backgroundTint="@color/raise_dino_green"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:fontFamily="@font/soyomaple"
                android:text="구매"
                android:gravity="center"
                android:textColor="@color/white"
            />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</LinearLayout>